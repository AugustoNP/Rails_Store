<% cache @product do %>
    <h1><%= @product.name %></h1>
    <h2>Costs <%= number_to_currency(@product.price) %></h2>
    <%= image_tag @product.featured_image, width: "300" if @product.featured_image.attached? %>
    <%= @product.description %>
<% end %>



<%= link_to "Back", products_path %>
<%= link_to "Edit", edit_product_path(@product) %>
<%= button_to "Delete", @product, method: :delete, data: { turbo_confirm: "Are you sure?" } %>
